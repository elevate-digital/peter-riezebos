{{ 'about.css' | asset_url | stylesheet_tag }}
{{ 'about.js' | asset_url | script_tag }}

{% liquid
  assign heading = section.settings.heading_type
%}

<section id="about" class="about">
  <div class="about__grid">
    <!-- Intro blok -->
    <div class="about__intro">
      <h2 class="about__title">The only way is all in.</h2>
      <p class="about__description">
        That's the process of artist Peter Riezebos. Curiosity consumes him as he dives in worlds big and small to make
        sense of them - video games, wine, wrestling, everything everywhere from Amsterdam to Shanghai.
      </p>
      <div class="about__signature">
        <svg width="140" height="61" aria-hidden="true">
          <use href="#signature" />
        </svg>
      </div>
    </div>

    <!-- Moments blok -->
    <div class="about__moments">
      <div class="moment">
        <div class="moment__media-wrapper">
          <img src="/assets/pr-shoot-03-BLQErYUQ.jpg" alt="Artwork 1" class="moment__media">
        </div>
        <div class="moment__meta">
          <span class="moment__year">2024</span>
          <div class="moment__text">
            <h3 class="moment__title">Key Moment</h3>
            <p class="moment__description">Lorem ipsum dolor sit amet consectetur adipiscing elit.</p>
          </div>
        </div>
      </div>

      <div class="moment">
        <div class="moment__media-wrapper">
          <img src="/assets/pr-shoot-06-C2xqS1dr.jpg" alt="Artwork 2" class="moment__media">
        </div>
        <div class="moment__meta">
          <span class="moment__year">2022</span>
          <div class="moment__text">
            <h3 class="moment__title">Experiment</h3>
            <p class="moment__description">
              Egestas adipiscing aenean in tellus pretium tempus amet eget sit. Elit mattis tellus vel tellus vestibulum
              mauris amet pellentesque.
            </p>
          </div>
        </div>
      </div>

      <div class="moment">
        <div class="moment__media-wrapper">
          <img src="/assets/pr-shoot-05-CRnhSMSL.jpg" alt="Artwork 3" class="moment__media">
        </div>
        <div class="moment__meta">
          <span class="moment__year">2020</span>
          <div class="moment__text">
            <h3 class="moment__title">Early Days</h3>
            <p class="moment__description">Phasellus varius nulla vel turpis consectetur fermentum.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "About",
  "class": "about-section",
  "settings": [
    {
      "type": "select",
      "id": "heading_type",
      "label": "Heading Type",
      "default": "h2",
      "options": [
        { "value": "h1", "label": "H1" },
        { "value": "h2", "label": "H2" },
        { "value": "h3", "label": "H3" }
      ]
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "About Me"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Peter Riezebos is a Dutch-born, globally roaming artist whose work blends neo-expressionism with radical honesty. Inspired by Basquiat, Picasso, and chaos itself, his paintings are intense, intimate, and immersive. <br><br> No gimmicks. No compromise.</p>"
    },
    {
      "type": "text",
      "id": "button_primary_text",
      "label": "Primary Button Text",
      "default": "About Peter"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Primary Button Link",
      "visible_if": "{{ section.settings.button_primary_text != blank }}"
    },
    {
      "type": "text",
      "id": "button_secondary_text",
      "label": "Secondary Button Text",
      "default": "Download presskit"
    },
    {
      "type": "url",
      "id": "button_secondary_link",
      "label": "Secondary Button Link",
      "visible_if": "{{ section.settings.button_secondary_text != blank }}"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Afbeelding",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Afbeelding"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "About"
    }
  ]
}
{% endschema %}
