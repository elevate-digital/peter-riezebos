{% schema %}
{
  "name": "Contact",
  "class": "contact-section",
  "settings": [
    {
      "type": "select",
      "id": "heading_type",
      "label": "Heading Type",
      "default": "h2",
      "options": [
        { "value": "h1", "label": "H1" },
        { "value": "h2", "label": "H2" },
        { "value": "h3", "label": "H3" }
      ]
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Want to connect, collaborate, or just stay in the loop?"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "Reach out â€” Peter might be in Hardewijk, Amsterdam, L.A., or somewhere in between."
    }
  ],
  "blocks": [
    {
      "type": "contact_block",
      "name": "Contact Block",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Titel",
          "default": "Contact"
        },
        {
          "type": "text",
          "id": "email",
          "label": "E-mail",
          "default": "info@mail.com"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Contact"
    }
  ]
}
{% endschema %}
